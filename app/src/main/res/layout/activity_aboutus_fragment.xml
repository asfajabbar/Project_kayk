<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutus_image"
    tools:context=".menu_fragments.aboutus_fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/banner_background">
        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/close"
            android:layout_marginTop="5dp"
            android:background="@color/banner_background"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In this revolutionary world, Internet keeps people connected to each other. E-commerce has changed the way of buying and selling products. People love to customize the things with their own choice. Kayk is also one of those interesting applications where people can design their own cake the way they love it. This application will let you design the 2 dimensional cakes,and let you see what it looks like from all sides. This app provides the most efficient way to contact the best bakers of your area to place your customized orders."
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/inria_sans_bold"/>
</FrameLayout>